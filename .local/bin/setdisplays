#!/bin/sh

NUM_DISPLAYS=$(xrandr -q | awk '/ connected/ {print $1}' | wc -l)
case $NUM_DISPLAYS in
  1) xrandr --output eDP1 --primary --mode 1920x1080 --brightness 0.7 --output DP3 --off;;
  2) xrandr --output eDP1 --primary --mode 1920x1080 --brightness 0.7 --output DP3 --auto --left-of eDP1;;
esac

# set wallpaper
setwal
