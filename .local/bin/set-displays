#!/bin/sh

NUM_DISPLAYS=$(xrandr -q | awk '/ connected/ {print $1}' | wc -l)
case $NUM_DISPLAYS in
  1) xrandr --output eDP-1 --mode 1920x1080;;
  2) xrandr --output eDP-1 --mode 1920x1080 --output DP-1 --auto --left-of eDP-1;;
  3) xrandr --output eDP-1 --mode 1920x1080 --output DP-1 --auto --left-of eDP-1 --output DP-3 --mode 1920x1080 --right-of eDP-1;;
esac

# set random wallpaper
set-wal -r
